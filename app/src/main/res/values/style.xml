<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="textStyleTitle">
        <item name="android:fontFamily">@font/gilroy_extrabold</item>
        <item name="android:textColor">@color/black_medium</item>
        <item name="android:textSize">@dimen/bigText_32</item>
    </style>

    <style name="textStyleTitleChat">
        <item name="android:fontFamily">@font/gilroy_extrabold</item>
        <item name="android:textColor">@color/black_medium</item>
        <item name="android:textSize">@dimen/mediumText_24</item>
    </style>

    <style name="textStyleSubtitle">
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">@color/blue_gray</item>
        <item name="android:textSize">@dimen/tinyText_16</item>
    </style>

    <style name="textStyleTitleMoreOptions">
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/tinyText_16</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="textStyleContainerMoreOptions">
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:textSize">@dimen/tiny_tinyText_14</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textStyleTitleGroupChat">
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/tiny_tinyText_14</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="textStyleHasAccount">
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:text">@string/has_account</item>
        <item name="android:textColor">@color/blue_gray</item>
        <item name="android:textSize">@dimen/tinyText_16</item>
    </style>

    <style name="textStyleEnter">
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:text">@string/enter</item>
        <item name="android:textColor">@color/blue_medium</item>
        <item name="android:textSize">@dimen/tinyText_16</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
    </style>

    <style name="buttonsStyle">
        <item name="android:background">@drawable/gradient_button</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">@dimen/smallText_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="arrowBackButtonStyle">
        <item name="android:background">@drawable/back_button_background</item>
        <item name="android:src">@drawable/ic_arrow</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">@color/blue_gray</item>
        <item name="android:textSize">@dimen/tinyText_16</item>
    </style>

    <style name="PasswordField">
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>
</resources>
